/** 
 * Multiplexor:
 * if (sel = 0) out = a, else out = b
 */
CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=invertedSel);
    And(a=invertedSel, b=a, out=firstPart);
    And(a=b, b=sel, out=secondPart);
    Or(a=firstPart, b=secondPart, out=out);   
